    "build:watch": "rollup -c --watch",
    "build:docs": "node src/tools/mkdocs.js",
    "docs": "typedoc src/index.ts",
    "lint": "eslint .",
    "test": "jest",
    "start": "npm-run-all server build:watch",
    "server": "mdserver .",
